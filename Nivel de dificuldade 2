1-

Algoritmo "semnome"
Var
N1, N2, N3,M:real

Inicio
escreval ("coloque primeira nota")
leia(n1)
escreval ("coloque segunda nota")
leia(n2)
escreval ("coloque terceira nota")
leia(n3)

M <- (n1+n2+n3)/3

se (M >= 7) então
escreval("Aprovado com exelencia!!!,(; com nota",M)
senao
se (M < 7) e (M >= 5) então
escreval("Recuperação!!!); com nota",M)
senão
 escreval ("Reprovado!!!0: com nota",M)
fimse
fimse
