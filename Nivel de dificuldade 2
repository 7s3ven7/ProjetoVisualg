6-

Algoritmo "sem nome"
Var
nome1,nome2,nome3,nome4,nome5: caractere
idade1,idade2,idade3,idade4,idade5,maior_idade: inteiro
media_idade: real
maior_idade

Inicio
Escreval("Informe o primeiro nome")
leia (nome1)
Escreval("Informe o segundo nome")
leia (nome2)
Escreval("Informe o terceiro nome")
leia (nome3)
Escreval("Informe o quarto nome")
leia (nome4)
Escreval("Informe o quinto nome")
leia (nome5)
Escreval("Informe a primeira idade")
leia (idade1)
Escreval("Informe a segunda idade")
leia (idade2)
Escreval("Informe a terceira idade")
leia (idade3)
Escreval("Informe a quarta idade")
leia (idade4)
Escreval("Informe a quinta idade")
leia (idade5)

media_idade <- (idade1+idade2+idade3+idade4+idade5)/5
Se (idade1 >= idade2) então
    maior_idade <- idade1
senão
    maior_idade <- idade2
fimse
se (idade3 >= maior_idade) então
    maior_idade <- idade3
fimse
se (idade4 >= maior_idade) então
    maior_idade <- idade4
fimse
se (idade5 >= maior_idade) então
    maior_idade <- idade5
fimse
escreval("A maior idade é: ",maior_idade," e a média das idades é de: ",media_idade)
Fimalgoritmo


7- 
Algoritmo "semnome"
Var
Nome,Nome_:caracter
Senha,Senha_:inteiro
Inicio
Nome <- "admin"
Senha <- 123
Escreval("Nome de usuário:")
leia (Nome_)
Escreval("Senha:")
Leia (Senha_)
se (Nome = Nome_) e (Senha = Senha_) então
Escreval("Login efetuado!")
fimse
se (Nome <> Nome_) e (Senha <> Senha_) então
Escreval("Ambas informações estão incorretas!")
fimse
se Nome <> Nome_ então
Escreval("Nome de usuário está incorreto!")
fimse
se Senha <> Senha_ então
Escreval("A senha está incorreto!")
fimse
Fimalgoritmo

8- 

Algoritmo "semnome"
Var
Animal: caracter
Quantidade: inteiro

Inicio
Escreval("Nome do animal:")
Leia(Animal)
Escreval("Quantidade de animais desta espécie:")
Leia(Quantidade)

se (Quantidade > 200) e (Quantidade < 500) então
    Escreval("Espécie criticamente em perigo")
senão
 se (Quantidade > 500) e (Quantidade < 1000) então
    Escreval("Espécie em perigo")
fimse
se (Quantidade > 5000) então
    Escreval("Espécie vulnerável")
fimse
fimse
